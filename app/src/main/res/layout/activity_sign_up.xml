<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg3_introduce"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp7"
                android:text="First Name"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@mipmap/bg_rectangle_signup"
                android:hint="First Name"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp7"
                android:layout_marginTop="@dimen/dp13"
                android:text="Last Name"
                android:textColor="@color/white"
                android:textSize="@dimen/dp13" />

            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@mipmap/bg_rectangle_signup"
                android:hint="Last Name"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp7"
                android:layout_marginTop="@dimen/dp13"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="@dimen/dp13" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@mipmap/bg_rectangle_signup"
                android:hint="Email"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp7"
                android:layout_marginTop="@dimen/dp13"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="@dimen/dp13" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@mipmap/bg_rectangle_signup"
                android:hint="Password"
                android:paddingLeft="15dp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp7"
                android:layout_marginTop="@dimen/dp13"
                android:text="Phone Number"
                android:textColor="@color/white"
                android:textSize="@dimen/dp13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_area_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:background="@mipmap/bg_rectangle_signup"
                    android:hint="+852"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@mipmap/bg_rectangle_signup"
                    android:hint="Phone Number"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="15dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp7"
                android:layout_marginTop="@dimen/dp13"
                android:text="Referral Code"
                android:textColor="@color/white"
                android:textSize="@dimen/dp13" />

            <EditText
                android:id="@+id/et_referral_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@mipmap/bg_rectangle_signup"
                android:hint="Referral Code"
                android:paddingLeft="15dp"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp11"
                    android:layout_marginTop="@dimen/dp11"
                    android:text="By Creating an account you agree to our"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp11"
                    android:layout_marginTop="@dimen/dp7"
                    android:text="Terms of Service and Privacy Policy"
                    />

                <ImageView
                    android:id="@+id/iv_google_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/img_signup2"
                    android:layout_marginTop="@dimen/dp5"
                    />

                <ImageView
                    android:id="@+id/iv_fb_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/img_signup1"
                    android:layout_marginTop="@dimen/dp15"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp11"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="Already have an account?"
                    />

                <Button
                    android:id="@+id/btn_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/btn_done_signup"
                    android:layout_marginTop="@dimen/dp15"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>