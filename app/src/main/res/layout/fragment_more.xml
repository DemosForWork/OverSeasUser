<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:src="@mipmap/boy" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp30"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/iv_photo"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kobe"

                        android:textColor="@color/black"
                        android:textSize="@dimen/dp18" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="26dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80"
                        android:textColor="@color/text_yellow"
                        android:textSize="@dimen/dp10"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="coins"
                        android:textColor="@color/text_yellow"
                        android:textSize="@dimen/dp10"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="26dp"
                    android:layout_toLeftOf="@id/ll_right"
                    android:src="@mipmap/coin" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp30"
                android:background="#dbdbdb" />


            <TextView
                android:id="@+id/tv_notification_set"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginLeft="@dimen/dp35"
                android:gravity="center_vertical"
                android:text="Notification Setting"
                android:textColor="#6e6e6e"
                android:textSize="@dimen/dp20"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dbdbdb" />

            <TextView
                android:id="@+id/tv_set_language"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginLeft="@dimen/dp35"
                android:gravity="center_vertical"
                android:text="Region Language Setting"
                android:textColor="#6e6e6e"
                android:textSize="@dimen/dp20"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dbdbdb" />

            <TextView
                android:id="@+id/tv_help"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginLeft="@dimen/dp35"
                android:gravity="center_vertical"
                android:text="Help"
                android:textColor="#6e6e6e"
                android:textSize="@dimen/dp20"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dbdbdb" />

            <TextView
                android:id="@+id/tv_support"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginLeft="@dimen/dp35"
                android:gravity="center_vertical"
                android:text="Customer Support"
                android:textColor="#6e6e6e"
                android:textSize="@dimen/dp20"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dbdbdb" />

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginLeft="@dimen/dp35"
                android:gravity="center_vertical"
                android:text="Feedback"
                android:textColor="#6e6e6e"
                android:textSize="@dimen/dp20"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dbdbdb" />

            <TextView
                android:id="@+id/tv_terms"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginLeft="@dimen/dp35"
                android:gravity="center_vertical"
                android:text="Terms coditions"
                android:textColor="#6e6e6e"
                android:textSize="@dimen/dp20"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dbdbdb" />

            <TextView
                android:id="@+id/tv_privacy"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginLeft="@dimen/dp35"
                android:gravity="center_vertical"
                android:text="Privacy"
                android:textColor="#6e6e6e"
                android:textSize="@dimen/dp20"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dbdbdb" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginLeft="@dimen/dp35"
                android:gravity="center_vertical"
                android:text="Ver.1.0.0"
                android:textColor="#6e6e6e"
                android:textSize="@dimen/dp20"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dbdbdb" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
