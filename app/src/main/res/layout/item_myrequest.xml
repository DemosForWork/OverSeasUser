<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@mipmap/bg_item_inbox"
                android:backgroundTint="@color/divider"
                android:backgroundTintMode="multiply"
                android:paddingBottom="10dp"
                android:paddingRight="10dp">

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Looking for used excavator"
        android:textColor="@color/black"
        android:textSize="@dimen/dp15"
        android:textStyle="bold"/>


    <RelativeLayout
        android:id="@+id/slashRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_hint"
        android:gravity="center">

        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="3/5"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp12"
            />

        <!--<TextView
            android:id="@+id/quoted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/slash"
            android:text="Quoted"
            android:textColor="#ff2d55"
            android:textSize="@dimen/dp10"
            />-->
    </RelativeLayout>


    <TextView
        android:id="@+id/chatNow"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/slashRL"
        android:background="@drawable/bg_yellow_border_black"
        android:backgroundTint="#70CC86"
        android:gravity="center"
        android:padding="8dp"
        android:text="Chat Now"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp12"
        />

    <TextView
        android:id="@+id/viewDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slashRL"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/chatNow"
        android:background="@drawable/bg_yellow_border_black"
        android:gravity="center"
        android:padding="8dp"
        android:text="  Request detail  "
        android:textColor="@android:color/black"
        android:textSize="@dimen/dp12"
        />

</RelativeLayout>