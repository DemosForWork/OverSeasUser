<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <include layout="@layout/action_bar"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="you do not have any card now."
       android:textSize="@dimen/dp20"
       android:layout_marginTop="@dimen/dp60"
       android:gravity="center"
       android:textStyle="bold"
       />
    
    <Button
        android:id="@+id/btn_add"
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:background="@mipmap/btn_task_add_card"
        android:layout_marginTop="@dimen/dp45"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp30"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="@dimen/dp45"
            android:background="@mipmap/iv_visa"
            />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="@dimen/dp45"
            android:background="@mipmap/iv_visa1"
            />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@mipmap/iv_visa2"
            />
    </LinearLayout>

    <View
        android:layout_width="230dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="100dp"
        />
    <Button
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:background="@mipmap/btn_task_choose_card"
        android:layout_marginTop="@dimen/dp20"
        />

</LinearLayout>

