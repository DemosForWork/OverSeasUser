<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/tv_title"
        android:layout_marginLeft="@dimen/dp35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Message"
        android:gravity="left"
        android:textColor="@color/text_yellow"
        android:textSize="@dimen/dp24"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_range"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_mssage_code"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="top"
            android:hint="Input your message"
            android:inputType="text"
            android:background="@null"
            android:padding="15dp"
            android:textSize="15dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:src="@mipmap/camera"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/iv_chooseimage"
                    android:layout_marginLeft="@dimen/dp16"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:src="@mipmap/sound"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_choosesound"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_marginBottom="@dimen/dp3"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:adjustViewBounds="true"
    android:id="@+id/iv_showimae"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/play_stop"
            android:src="@mipmap/play"
            android:background="@null"
            android:layout_width="30dp"
            android:layout_height="60dp"/>
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/music_cur"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:12"/>

    </LinearLayout>
</LinearLayout>
