<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="user" />

        <Button
            android:id="@+id/bt_setrvice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Service Provider" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_using"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:text="Using Popmach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_login_password"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:text="Login and Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/profile_setting"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:text="Your Profile and Setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_privacy"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:text="privacy and safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/polices_reporting"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:text="Policies and Reporting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>