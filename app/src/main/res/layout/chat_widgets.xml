<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/background_profile"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_up"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:cropToPadding="true"
            android:layout_marginLeft="18dp"
            android:background="@mipmap/dropdown"
            android:visibility="visible" />


        <RelativeLayout
            android:id="@+id/edittext_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical" >

                <EditText
                    android:id="@+id/et_sendmessage"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginRight="0dip"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/input"
                    android:inputType="text"
                    android:maxLines="3"
                    android:hint=""
                    android:cursorVisible="false"
                    android:textColorHint="#BBBBBB"
                    android:textColor="@color/colorAccent"
                    android:minHeight="20dp"
                    android:textSize="16sp"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:cropToPadding="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/symbol5"
            android:visibility="visible"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_up"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/ll_bottom"
        android:background="@color/background_profile"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bt_photo"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="match_parent"
                android:text=""/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/group934"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bt_file"
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="match_parent"
                android:text=""/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/group938"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>