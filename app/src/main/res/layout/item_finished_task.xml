<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="@dimen/dp20"
    android:layout_marginRight="@dimen/dp20"
    android:layout_marginTop="@dimen/dp10"
    android:background="@mipmap/bg_item_inbox">

    <LinearLayout
        android:layout_width="@dimen/dp112"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp10"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp56"
            android:layout_height="@dimen/dp56"
            android:src="@mipmap/boy" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Kobe Lee"
            android:textColor="@color/black"
            android:textSize="@dimen/dp15" />


        <LinearLayout
            android:id="@+id/layout_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/iv_person_star"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(66)"
                android:textColor="@color/black"
                android:textSize="@dimen/dp10" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp7"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:textColor="@color/lightblack_task"
                android:textSize="@dimen/dp8" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hong Kong"
                android:textColor="@color/lightblack_task"
                android:textSize="@dimen/dp8" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp10"
        android:gravity="right"
        android:padding="@dimen/dp10">

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"

            android:gravity="right"
            android:text="Looking for used excavator"
            android:textColor="@color/black"
            android:textSize="@dimen/dp13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:gravity="right"
            android:text="7 days ago"
            android:textColor="@color/black"
            android:textSize="@dimen/dp11" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:background="@mipmap/icon_stat_unselected"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="@dimen/dp30"
            android:layout_marginTop="@dimen/dp5"
            android:text="Rate"
            android:textColor="@color/white"
            android:background="@drawable/bg_shape_selected"
            />

    </LinearLayout>

</LinearLayout>